<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/custom_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/custom_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:background</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.PlaylistMaker.Main" />

    <style name="Theme.PlaylistMaker.Settings">
        <item name="color">@color/white</item>
    </style>
</resources>