<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/very_small"
    android:paddingVertical="6dp">
    <ImageView
        android:id="@+id/playlist_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="w, 1:1"
        android:src="@drawable/placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SmallRegularText"
        android:textSize="@dimen/sub_medium_text_size"
        android:textColor="?attr/colorOnSecondary"
        tools:text="BestPlaylistEvor"
        android:layout_marginTop="@dimen/very_small"
        app:layout_constraintTop_toBottomOf="@id/playlist_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/playlist_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SmallRegularText"
        android:textSize="@dimen/sub_medium_text_size"
        android:textColor="?attr/colorOnSecondary"
        tools:text="999 треков"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>