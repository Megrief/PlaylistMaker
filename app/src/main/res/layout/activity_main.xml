<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingTop="14dp"
    android:paddingRight="@dimen/medium_padding"
    android:paddingBottom="12dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_big"
        android:text="@string/title"
        android:textColor="@color/custom_white"
        android:textSize="@dimen/medium_text_size" />

    <!-- Search -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/custom_white"
        android:foreground="?attr/selectableItemBackground"
        android:insetTop="@dimen/zero"
        android:insetBottom="@dimen/zero"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/custom_black"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/medium_padding"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_pad"
        app:iconTint="@color/custom_black" />

    <!-- Media -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/custom_white"
        android:foreground="?attr/selectableItemBackground"
        android:insetTop="@dimen/zero"
        android:insetBottom="@dimen/zero"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/custom_black"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/medium_padding"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_pad"
        app:iconTint="@color/custom_black" />

    <!-- Settings -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_weight="1"
        android:backgroundTint="@color/custom_white"
        android:foreground="?attr/selectableItemBackground"
        android:insetTop="@dimen/zero"
        android:insetBottom="@dimen/zero"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/custom_black"
        android:textSize="@dimen/medium_text_size"
        app:cornerRadius="@dimen/medium_padding"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_pad"
        app:iconTint="@color/custom_black" />

</LinearLayout>