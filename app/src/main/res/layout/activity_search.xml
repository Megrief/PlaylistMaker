<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".activities.SearchActivity" >

    <!-- Head -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarAppearance.WithIcon"
        app:title="@string/search" />

    <!-- Search bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/medium"
        android:layout_marginEnd="@dimen/medium"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edit_text_with_rounded_corners"
        android:paddingStart="@dimen/medium"
        tools:ignore="RtlSymmetry" >

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_with_rounded_corners"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:drawableStart="@drawable/search_small"
            android:drawablePadding="6dp"
            android:drawableTint="?attr/colorSecondaryVariant"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="40"
            android:maxLines="1"
            android:textColor="@color/custom_black"
            android:textColorHint="?attr/colorSecondaryVariant"
            android:textFontWeight="400"
            android:textSize="@dimen/medium_text_size"
            tools:ignore="Autofill,TouchTargetSizeCheck" />

        <!-- Clear button -->
        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/search_bar"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:contentDescription="@string/clear"
            android:src="@drawable/clear"
            android:visibility="gone"
            app:tint="?attr/colorSecondaryVariant" />
    </RelativeLayout>

    <!-- Search results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Message -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/something_wrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/something_wrong_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/medium"
            android:src="@drawable/nothing_found" />
        
        <TextView
            android:id="@+id/something_wrong_message"
            style="@style/SearchMessageTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nothing_found" />
        
        <TextView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/average"
            android:text="@string/refresh"
            android:textColor="?attr/colorOnPrimary"
            android:paddingTop="@dimen/icon_pad"
            android:paddingBottom="@dimen/icon_pad"
            android:paddingStart="@dimen/almost_medium"
            android:paddingEnd="@dimen/almost_medium"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:visibility="gone"
            android:textSize="14sp"
            android:background="@drawable/refresh_button_background"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>