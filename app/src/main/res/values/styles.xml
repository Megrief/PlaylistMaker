<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonWithTextOnMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/medium</item>
        <item name="android:layout_marginRight">@dimen/medium</item>
        <item name="android:layout_marginBottom">@dimen/medium</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/custom_black</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="cornerRadius">@dimen/medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/custom_black</item>
        <item name="iconPadding">@dimen/icon_pad</item>
        <item name="android:shadowRadius">0</item>
    </style>
    
    <style name="MenuTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:paddingStart">@dimen/medium</item>
        <item name="android:paddingEnd">@dimen/sub_medium</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="SearchMessageTextStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginStart">@dimen/average</item>
        <item name="android:layout_marginEnd">@dimen/average</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeadTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="ButtonWithTextOnSearch" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/zero</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="android:insetLeft">@dimen/zero</item>
        <item name="android:insetRight">@dimen/zero</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconGravity">textTop</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="ImageButtonInHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:backgroundTint">?android:background</item>
        <item name="android:contentDescription">@string/arrow_back</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:src">@drawable/back_arrow</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>
    <style name="ToolbarAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">@dimen/small</item>
        <item name="titleTextAppearance">@style/HeadTextStyle</item>
    </style>
    <style name="ToolbarAppearance.WithIcon">
        <item name="navigationIcon">@drawable/back_arrow</item>
        <item name="navigationIconTint">?attr/colorOnSecondary</item>
    </style>
    <style name="TrackCardTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="TrackCardTextStyle.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="ImageWithRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>
</resources>